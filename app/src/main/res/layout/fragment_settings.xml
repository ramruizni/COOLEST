<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rayku.coolest.FragmentSettings">

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexDirection="column"
        app:flexWrap="nowrap"
        app:justifyContent="space_around">

        <TextView android:id="@+id/theme00"
            app:layout_flexGrow="1"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@color/lightDark"
            android:gravity="center"
            android:text="@string/white"
            android:textSize="20sp" />

        <TextView android:id="@+id/theme01"
            app:layout_flexGrow="1"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@color/lightDark"
            android:gravity="center"
            android:text="@string/_4_colors"
            android:textSize="20sp" />

        <TextView android:id="@+id/theme10"
            app:layout_flexGrow="1"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@color/lightDark"
            android:gravity="center"
            android:text="@string/black"
            android:textSize="20sp" />

        <TextView android:id="@+id/theme11"
            app:layout_flexGrow="1"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@color/lightDark"
            android:gravity="center"
            android:text="@string/crazyPsycho"
            android:textSize="20sp" />

    </com.google.android.flexbox.FlexboxLayout>

</FrameLayout>
