<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.rayku.tutorial21.SongFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/songLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/songGridLayout"
            app:layout_constraintRight_toRightOf="@+id/songGridLayout"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"/>

        <GridLayout
            android:id="@+id/songGridLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="40dp"
            android:paddingTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1">

            <TextView android:id="@+id/song_song_title"

                android:layout_column="0"
                android:layout_row="0"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/song_song_artist"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="center"
                android:maxHeight="24dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

        </GridLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:layout_marginBottom="-68dp"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/songGridLayout"
            app:layout_constraintRight_toRightOf="@+id/songGridLayout"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

            <Button
                android:id="@+id/loopBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/loop"/>

            <Button
                android:id="@+id/prevBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/prev"
                android:onClick="playPrevSong"/>

            <Button
                android:id="@+id/playBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/play"
                android:onClick="playPause"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/next"
                android:onClick="playNextSong"/>

            <Button
                android:id="@+id/randBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/rand"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
